@using Wattmate_Site.Users.UserAuthentication.Models
@model UserLoginData;
@{
    ViewData["Title"] = "Login";
}
<!-- Login 1 - Bootstrap Brain Component -->
<div class=" py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                <div class="bg-white p-4 p-md-5 rounded shadow-sm">
                    <div class="row">
                        <div class="col-12">
                            <div class="text-center mb-5">
                                <a href="#!">
                                    <img width="288" height="220" src="~/Resources/Logos/logo.png" class="logo" alt="logo" />
                                </a>
                                <a class="navbar-brand" onclick="loadingStart()" href="../">

                                    <div>
                                        <h4 class="portal-name-color">WattMate Login page</h4>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <form asp-action="LoginPost" method="post" autocomplete="off" class="text-center">
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Model.ErrorMessage
                                </div>
                            }

                            <div class="col-12">
                                <div class=" input-group mb-3 ">
                                    <input asp-for="UserEmail" type="text" class="form-control" placeholder="Brugernavn" aria-label="Recipient's username" aria-describedby="basic-addon2">

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mb-3 row justify-content-center">
                                    <div class=" input-group ">
                                        <input asp-for="UserPassword" type="password" placeholder="Adgangskode" class="form-control" id="loginPasswordInput">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button onclick="showLoading()" class="btn btn-primary btn-lg" type="submit" id="submitButton">Log In</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function showLoading() {
        var submitButton = document.getElementById('submitButton');
        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm" aria-hidden="true"></span><span class="" role="status"> Logger ind...</span>';
        submitButton.disabled = false;
    }
</script>

